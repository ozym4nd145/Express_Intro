<% include partials/header %>
<base href="/campgrounds/<%= camp._id %>/" />
<div class="container text-center border" style="max-width: 600px; margin-top: 3%;">
	<h1>Edit Camp</h1>
	<form class="form-horizontal" action = "/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
		<div class="form-group">
      <label for="name" class="col-sm-2 control-label">Name:</label>
      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" placeholder="Camp Name" value="<%= camp.name %>">
      </div>
    </div>
		<div class="form-group">
      <label for="name" class="col-sm-2 control-label">Image URL:</label>
      <div class="col-sm-10">
        <input type="text" name="src" class="form-control" placeholder="ImageURL" value="<%= camp.src %>">
      </div>
    </div>
		<div class="form-group">
      <label for="name" class="col-sm-2 control-label">Description:</label>
      <div class="col-sm-10">
        <textarea name="desc" class="form-control" rows="10" placeholder="Description"><%=camp.desc%></textarea>
      </div>
    </div>
    <br>
		<button class="btn btn-primary btn-large btn-block" type="submit">Submit</button>
		<div style="text-align: left; margin-top: 2%"><a href="">Go Back</a></div>
	</form>
</div>
<% include partials/footer %>
