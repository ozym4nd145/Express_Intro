<% include partials/header %>

<div class="container text-center">
	<h1>Create new Campground</h1>
	
	<div class="container" style="max-width: 400px; margin-top: 3%;">
		<form action="/campgrounds" method="POST">
			<div class="form-group">
			<input type="text" name="name" class="form-control" placeholder="Camp Name">
			</div>
			<div class="form-group">
			<input type="text" name="src" class="form-control" placeholder="ImageURL">
			</div>
			<div class="form-group">
			<textarea name="desc" class="form-control" placeholder="Description">
			</textarea>
			</div>
			<button class="btn btn-primary btn-large btn-block" type="submit">Add New camp</button>
			<div style="text-align: left; margin-top: 2%"><a href="/campgrounds">Go Back</a></div>
		</form>
	</div>
</div>
<% include partials/footer %>