<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1> Welcome to YelpCamp! </h1>
			<p>View our hand-picked campgrounds from all around the world.</p>
			<% if(currentUser) {%>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add new camground</a>
			<% } %>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% camps.forEach(function(camp){ %>
			<div class="campground col-md-3 col-sm-6">
				<div class="thumbnail">
					<a href="/campgrounds/<%= camp._id %>">
						<img src="<%=camp.src %>">
					</a>
					<div class="caption">
						<h4><%= camp.name %></h4>
					</div>
				</div>
			</div>
		<% }); %>
	</div>
</div>

<% include partials/footer %>
